<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="blocks">
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">@dimen/layout_width</item>
    <item name="android:layout_height">@dimen/layout_height</item>
    <item name="android:layout_marginStart">@dimen/default_block_margin</item>
    <item name="android:layout_marginEnd">@dimen/default_block_margin</item>
  </style>
  <style name="gameButton">
    <item name="android:background">@drawable/calculate_button</item>
    <item name="android:onClick">onClickGameButton</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/main_menu_margin</item>
    <item name="android:layout_marginEnd">@dimen/main_menu_margin</item>
    <item name="android:layout_marginBottom">@dimen/default_layout_margin</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="menu">
    <item name="android:background">@drawable/calculate_button</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/main_menu_margin</item>
    <item name="android:layout_marginEnd">@dimen/main_menu_margin</item>
    <item name="android:layout_marginBottom">@dimen/main_menu_bottom_margin
    </item>
    <item name="android:gravity">center</item>
    <item name="layout_constraintEnd_toEndOf">parent</item>
    <item name="layout_constraintStart_toStartOf">parent</item>
    <item name="android:onClick">onClick</item>
  </style>
  <style name="styleHintMenuSwitcher">
    <item name="android:paddingStart">@dimen/radius</item>
    <item name="android:layout_gravity">center</item>
  </style>
  <style name="statsAndHintsLayout">
    <item name="android:layout_marginStart">@dimen/stats_margin</item>
    <item name="android:layout_marginEnd">@dimen/stats_margin</item>
    <item name="android:paddingStart">@dimen/stats_radius</item>
    <item name="android:paddingEnd">@dimen/stats_radius</item>
  </style>
  <style name="possibleValuesStyleStart" parent="possibleValuesStyle">
    <item name="android:layout_marginStart">@dimen/zero</item>
  </style>
  <style name="possibleValuesStyleEnd" parent="possibleValuesStyle">
    <item name="android:layout_marginEnd">@dimen/zero</item>
  </style>
  <style name="activityGameTextView">
    <item name="android:paddingStart">@dimen/message_text</item>
    <item name="android:paddingEnd">@dimen/message_text</item>
  </style>
  <style name="activityGameImageView">
    <item name="android:layout_marginEnd">@dimen/default_layout_margin</item>
  </style>
  <style name="activityGameConstraintLayout">
    <item name="android:layout_marginStart">@dimen/layout_margin_small</item>
    <item name="android:layout_marginEnd">@dimen/layout_margin_small</item>
  </style>
  <style name="possibleValuesFrame">
    <item name="android:layout_marginStart">@dimen/default_layout_margin</item>
    <item name="android:layout_marginEnd">@dimen/default_layout_margin</item>
  </style>
</resources>
