<resources>
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>
  <style name="possibleValuesStyle" parent="blocks">
    <item name="android:background">@drawable/possible_values_drawable</item>
    <item name="android:onClick">onClickValue</item>
  </style>
  <style name="lightBlocks" parent="cell">
    <item name="android:tag">@string/light</item>
    <item name="android:background">@drawable/light_block</item>
  </style>
  <style name="darkBlocks" parent="cell">
    <item name="android:tag">@string/dark</item>
    <item name="android:background">@drawable/dark_block</item>
  </style>
  <style name="cell" parent="blocks">
    <item name="android:textSize">@dimen/cell_text</item>
    <item name="android:onClick">onClickCell</item>
  </style>
  <style name="blocks">
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">@dimen/layout_width</item>
    <item name="android:layout_height">@dimen/layout_height</item>
    <item name="android:layout_marginLeft">@dimen/default_block_margin</item>
    <item name="android:layout_marginRight">@dimen/default_block_margin</item>
  </style>
  <style name="gameButton">
    <item name="android:background">@drawable/calculate_button</item>
    <item name="android:onClick">onClickGameButton</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/main_menu_margin</item>
    <item name="android:layout_marginRight">@dimen/main_menu_margin</item>
    <item name="android:layout_marginBottom">@dimen/default_layout_margin</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="menu">
    <item name="android:background">@drawable/calculate_button</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/main_menu_margin</item>
    <item name="android:layout_marginRight">@dimen/main_menu_margin</item>
    <item name="android:layout_marginBottom">@dimen/main_menu_bottom_margin
    </item>
    <item name="android:gravity">center</item>
    <item name="layout_constraintEnd_toEndOf">parent</item>
    <item name="layout_constraintStart_toStartOf">parent</item>
    <item name="android:onClick">onClick</item>
  </style>
  <style name="hintMenuRows">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="hintMenuDescription" parent="hintMenuRows">
    <item name="android:textSize">@dimen/stats_rows</item>
    <item name="android:textColor">@color/background_bottom</item>
  </style>
  <style name="ThemeHintMenuSwitcher">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="colorControlActivated">@color/background_top</item>
    <item name="android:colorForeground">@color/black</item>
  </style>
  <style name="styleHintMenuSwitcher">
    <item name="android:paddingLeft">@dimen/radius</item>
    <item name="android:layout_gravity">center</item>
  </style>
  <style name="statsRow">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">fill_parent</item>
  </style>
  <style name="statsCellDescription" parent="statsRow">
    <item name="android:textSize">@dimen/stats_rows</item>
    <item name="android:textColor">@color/background_bottom</item>
  </style>
  <style name="statsCellValue" parent="statsRow">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textSize">@dimen/stats_rows</item>
    <item name="android:textColor">@color/background_bottom</item>
  </style>
  <style name="statsPercent">
    <item name="layout_constraintGuide_percent">@dimen/stats_percent_padding
    </item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>
  <style name="defaultConstraintLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>
  <style name="NoBarsDialog" parent="android:Theme.Holo.Dialog.NoActionBar">
    <item name="android:actionBarDivider">@android:color/transparent</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="background">@android:color/transparent</item>
  </style>
</resources>
