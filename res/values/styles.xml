<resources>
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:colorPrimaryDark">@color/black</item>
  </style>
  <style name="possibleValuesStyle" parent="blocks">
    <item name="android:background">@drawable/possible_values_drawable</item>
    <item name="android:onClick">onClickValue</item>
  </style>
  <style name="lightBlocks" parent="cell">
    <item name="android:tag">@string/light</item>
    <item name="android:background">@drawable/light_block</item>
    <item name="android:onClick">onClickCell</item>
  </style>
  <style name="darkBlocks" parent="cell">
    <item name="android:tag">@string/dark</item>
    <item name="android:background">@drawable/dark_block</item>
    <item name="android:onClick">onClickCell</item>
  </style>
  <style name="cell" parent="blocks">
    <item name="android:textSize">@dimen/cell_text</item>
    <item name="android:onClick">onClickCell</item>
  </style>
  <style name="blocks">
    <item name="android:textColor">@color/black</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">@dimen/layout_width</item>
    <item name="android:layout_height">@dimen/layout_height</item>
    <item name="android:layout_marginStart">@dimen/default_block_margin</item>
    <item name="android:layout_marginEnd">@dimen/default_block_margin</item>
  </style>

  <style name="calculate">
    <item name="android:background">@drawable/calculate_button</item>
    <item name="android:onClick">onClickCalculate</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingStart">@dimen/calc_padding</item>
    <item name="android:paddingEnd">@dimen/calc_padding</item>
    <item name="android:layout_marginBottom">@dimen/default_layout_margin</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="mainMenu">
    <item name="android:background">@drawable/calculate_button</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/main_menu_margin</item>
    <item name="android:layout_marginEnd">@dimen/main_menu_margin</item>
    <item name="android:layout_marginBottom">@dimen/main_menu_bottom_margin
    </item>
    <item name="android:gravity">center</item>
    <item name="layout_constraintEnd_toEndOf">parent</item>
    <item name="layout_constraintStart_toStartOf">parent</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:onClick">onClick</item>
  </style>

</resources>
