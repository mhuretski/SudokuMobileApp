<resources>
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:colorPrimaryDark">@color/black</item>
  </style>

  <style name="possibleValuesStyle" parent="blocks">
    <item name="android:background">@drawable/possible_values_drawable</item>
    <item name="android:onClick">onClickValue</item>
  </style>

  <style name="lightBlocks" parent="blocks">
    <item name="android:tag">@string/light</item>
    <item name="android:background">@drawable/light_block</item>
    <item name="android:onClick">onClickCell</item>
  </style>

  <style name="darkBlocks" parent="blocks">
    <item name="android:tag">@string/dark</item>
    <item name="android:background">@drawable/dark_block</item>
    <item name="android:onClick">onClickCell</item>
  </style>

  <style name="blocks">
    <item name="android:textColor">@color/black</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">0dp</item>
    <item name="android:layout_marginStart">2dp</item>
    <item name="android:layout_marginEnd">2dp</item>
  </style>
</resources>
