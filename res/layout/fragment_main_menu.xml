<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".parts.menu.MainMenu">

  <fragment
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainMenuButtonsFrame"
    android:name="maksim_huretski.sudoku.parts.menu.MenuButtons"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <fragment
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/menuDifficultyFrame"
    android:name="maksim_huretski.sudoku.parts.menu.MenuDifficulty"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <fragment
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menuStatsFrame"
    android:name="maksim_huretski.sudoku.parts.menu.Statistics"
    app:layout_constraintBottom_toBottomOf="parent"/>

</FrameLayout>
