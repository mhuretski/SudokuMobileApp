<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main_window"
  android:background="@color/border"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@string/vDefault"
      android:scaleType = "centerCrop"
      app:srcCompat="@drawable/background_image"
      android:id="@+id/backgroundImage"/>

  </FrameLayout>
  <TextView
    android:text="@string/vDefault"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/messages"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/default_layout_margin"/>


  <android.support.constraint.ConstraintLayout
    android:id="@+id/table"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintHorizontal_weight="@integer/one"
    android:layout_marginTop="@dimen/default_layout_margin"
    android:layout_marginStart="@dimen/layout_margin_small"
    android:layout_marginEnd="@dimen/layout_margin_small"
    app:layout_constraintTop_toBottomOf="@+id/messages">

    <fragment
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:name="maksim_huretski.sudoku.parts.Sudoku1of3"
      android:id="@+id/sudoku1of3Main"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/sudoku2of3Main"/>

    <fragment
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:name="maksim_huretski.sudoku.parts.Sudoku2of3"
      android:id="@+id/sudoku2of3Main"
      app:layout_constraintTop_toBottomOf="@+id/sudoku1of3Main"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/sudoku3of3Main"/>

    <fragment
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:name="maksim_huretski.sudoku.parts.Sudoku3of3"
      android:id="@+id/sudoku3of3Main"
      app:layout_constraintTop_toBottomOf="@+id/sudoku2of3Main"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"/>

  </android.support.constraint.ConstraintLayout>

  <fragment
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/default_layout_margin"
    android:layout_marginEnd="@dimen/default_layout_margin"
    app:layout_constraintTop_toBottomOf="@+id/table"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/calculate"
    android:name="maksim_huretski.sudoku.parts.PossibleValues"
    android:id="@+id/possibleValuesMain"/>

  <Button
    android:text="@string/calculate"
    android:id="@+id/calculate"
    android:background="@drawable/calculate_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onClickCalculate"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="@dimen/default_layout_margin"/>

</android.support.constraint.ConstraintLayout>
